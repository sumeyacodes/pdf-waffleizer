{
  "name": "pdf-waffleizer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "start": "npm run build && vite preview",
    "server": "npx tsx --watch src/server/index.ts",
    "py": "uv venv && uv pip install -r requirements.txt",
    "activate": "source .venv/bin/activate",
    "script": "uv python src/scraper/file-script.py",
    "docker": "docker build -t pdf-waffleizer . && docker run -p 8000:8000 pdf-waffleizer",
    "pi": "uv pip install -r requirements.txt",
    "prepare": "husky"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.0.1",
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/text-to-speech": "^6.0.1",
    "@radix-ui/react-navigation-menu": "^1.2.12",
    "@tailwindcss/vite": "^4.1.4",
    "@tanstack/react-query": "^5.74.11",
    "@tanstack/react-query-devtools": "^5.75.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/mdx": "^2.0.13",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@vercel/functions": "^2.0.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^8.1.0",
    "lucide-react": "^0.503.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "radix-ui": "^1.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
